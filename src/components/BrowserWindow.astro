---
const { url, noBottomMargin } = Astro.props;
---

<figure class=`${noBottomMargin ? '!mb-0' : '!mb-16'}`>
	<div
		class='w-full h-full bg-white shadow-lg rounded-lg overflow-clip border border-neutral-300'
	>
		<div class='bg-neutral-300 text-white'>
			<div
				class='grid grid-cols-[1fr_4fr_1fr] items-center justify-between px-4 py-2'
			>
				<div></div>
				<div
					class='border border-neutral-400 h-6 rounded bg-neutral-100 !m-0 flex items-center justify-center text-sm text-neutral-400 italic leading-0 selection:bg-neutral-700 selection:text-white'
                    aria-hidden="true"
                >
					{url}
				</div>
				<div
					class='justify-self-end col-start-3 flex items-center !space-x-2 !my-0 *:!my-0'
				>
                <div class='w-3 h-3 bg-green-500 rounded-full'></div>
                <div class='w-3 h-3 bg-yellow-500 rounded-full'></div>
                <div class='w-3 h-3 bg-red-500 rounded-full'></div>
				</div>
			</div>
			<div class='!m-0'></div>
		</div>
		<div class='!m-0 *:w-full *:h-full'>
			<slot />
		</div>
	</div>
	<figcaption class='text-neutral-500 text-sm text-center italic !m-0'>
		<slot name='caption' />
	</figcaption>
</figure>
